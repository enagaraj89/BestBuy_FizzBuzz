@model FizzBuzzModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <div class="row">
        <h1 class="display-4">Welcome to Best Buy Fizz Buzz</h1>
    </div>

    <partial name="_ValidationScriptsPartial" />
    <div class="row">
        <div class="col-sm-6">
            <div class="panel-body">
                <form asp-route="GetFizzBuzz" id="FizzBuzzForm" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label asp-for="InputValues" class="bbfb-required font-weight-bold"></label><span class="bbfb-required-text"></span><br />
                            <label>Please enter a list of numbers separated by "," </label>
                            <input class="form-control" placeholder="Input Values" asp-for="InputValues" autofocus>
                        </div>
                        <div class="form-group">
                            <button id="btnGetFizzBuzz" class="btn btn-primary" name="button" value="getFizzBuzz">Get FizzBuzz</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model != null)
        {
            <label class="font-weight-bold">Fizz Buzz Output:</label>
            @foreach (var item in Model.Output)
            {
                <br />@Html.DisplayFor(modelItem => item)
            }
        }
    </div>

</div>
